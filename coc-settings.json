{

	"coc": {

		// "github": {
		//	 "filetypes": ["gitcommit", "markdown.ghpull"]
		// },

		"preferences": {
			"colorSupport": 0,
			"extensionUpdateCheck": "daily",
			"hoverTarget": "float",
			"minTriggerInputLength": 2,
			"rootPatterns": [ ".git", ".env", ".hg", ".svn" ],
			"snippetIndicator": " ",
			"timeout": 400,
			"triggerAfterInsertEnter": true
		}
	},

	"suggest": {
		"autoTrigger": "always",
		"echodocSupport": 1,
		"floatEnable": 1
	},

	"snippets": {
		"ultisnips.enable": false,
		"snipmate.enable": false,
		"ultisnips.directories": [ "usnips" ],
		"extend": {
			"cpp": [ "c" ]
		}
	},

	"diagnostic": {
		"errorSign": "×",
		"warningSign": "●",
		"infoSign": "!",
		"hintSign": "?",
		"messageTarget": "float",
		"virtualText": 1,
		"displayByAle": 0,
		"refreshOnInsertMode": 0
	},

	"git": {
		"enableGutters": 0,
		"addedSign.text": "▎",
		"changedSign.text": "▎",
		"removedSign.text": "◢",
		"topRemovedSign.text": "◥",
		"changeRemovedSign.text": "◢"
	},

	"vimlsp": {
		"diagnostic.enable": false,
		"indexes.runtimepath": false
	},

	"yaml": {
		"format": {
			"enable": true,
			"singleQuote": true,
			"bracketSpacing": true
		},
		"validate": true,
		"completion": true
	},

	"languageserver": {

		"ccls": {
			"command": "ccls",
			"filetypes": [ "c", "cpp" ],
			"rootPatterns": [ "Makefile", "compile_commands.json", ".git/", ".hg/" ],
			"initializationOptions": {
				"cache": { "directory": "/home/alter2000/.cache/ccls" }
			}
		},

		"rust": {
			"command": "rls",
			"filetypes": [ "rust" ],
			"rootPatterns": [ "Cargo.toml" ]
		},

		"haskell": {
			"command": "hie-wrapper",
			// "args": ["-l", "hie-log", "-d"],
			// "trace.server": "verbose",
			"rootPatterns": [ ".stack.yaml", "cabal.config", "package.yaml" ],
			"filetypes": [ "hs", "lhs", "haskell" ],
			"settings": {
				"languageServerHaskell": {
					"hlintOn": true,
					"maxNumberOfProblems": 10,
					"completionSnippetsOn": true
				}
			}
		},

		"go": {
			"command": "go-langserver",
			"filetypes": [ "go" ],
			"rootPatterns": [ "go.mod", "go.sum", "Gopkg.toml", "Gopkg.lock" ],
			"settings": {
				"funcSnippetEnabled": true,
				"gocodeCompletionEnabled": true,
				"formatTool": "gofmt",
				"lintTool": "golint"
			}
		},

		"bash": {
			"command": "bash-language-server",
			"args": [ "start" ],
			"filetypes": [ "sh", "bash" ],
			"ignoredRootPaths": [ "~" ]
		},

		"latex": {
			"command": "texlab",
			// not start server at home directory, since it won't work.
			"ignoredRootPaths": ["~"],
			"filetypes": [ "tex", "bib", "plaintex", "context" ]
		}

  }
}
