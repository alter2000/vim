{

	"coc": {

		// "github": {
		//	 "filetypes": ["gitcommit", "markdown.ghpull"]
		// },

		"preferences": {
			"colorSupport": true,
			"extensionUpdateCheck": "daily",
			"hoverTarget": "float",
			"minTriggerInputLength": 2,
			"rootPatterns": [ ".git", ".env", ".hg", ".svn" ],
			"timeout": 400,
			"currentFunctionSymbolAutoUpdate": false,
			"triggerAfterInsertEnter": true,
			"jumpCommand": "edit"
		}
	},

	"suggest": {
		"autoTrigger": "always",
		"snippetIndicator": " ",
		"floatEnable": true
	},

	"snippets": {
		"priority": 90,
		"editSnippetsCommand": "vsplit",
		"ultisnips.enable": true,
		"snipmate.enable": true,
		"snippets.author": "Jor Bashllari <altnate2000@gmail.com>",
		"userSnippetsDirectory": "~/.vim/snips",
		"convertToSnippetsAction": true,
		"extend": {
			"cpp": [ "c" ]
		}
	},

	"diagnostic": {
		"errorSign": "●",
		"warningSign": "×",
		"infoSign": "!",
		"hintSign": "?",
		"messageTarget": "float",
		"virtualText": false,
		"displayByAle": false,
		"refreshOnInsertMode": false
	},

	"codeLens": {
		"enable": true,
		"separator": "‣"
	},

	"todolist": {
		"enable": false,
		"maxsize": 99999,
		"dateFormat": "YYYYMMDD-HHmm",
		"autoUpload": true,
		"monitor": true,
		// "floating" | "virtual" | "echo" | "none"
		"notify": "floating",
		"promptForReminder": true
		// "easyMode": true
	},

	"git": {
		"enableGutters": 0,
		"addedSign.text": "▎",
		"changedSign.text": "▎",
		"removedSign.text": "◢",
		"topRemovedSign.text": "◥",
		"changeRemovedSign.text": "◢"
	},

	"python": {
		"autoUpdateLanguageServer": false,
		"languageServerPath": "python-language-server"
	},

	"vimlsp": {
		"diagnostic.enable": false,
		"indexes.runtimepath": false
	},

	"yaml": {
		"format": {
			"enable": true,
			"singleQuote": true,
			"bracketSpacing": true
		},
		"validate": true,
		"completion": true
	},

	"languageserver": {

		"ccls": {
			"command": "ccls",
			"filetypes": [ "c", "cpp" ],
			"rootPatterns": [ "Makefile", ".ccls", ".git/", ".hg/" ],
			"settings": {
				"cache.directory": "/home/alter2000/.cache/ccls",
				"client.snippetSupport": true,
				"completion.placeholder": false
			}
		},

		"rust": {
			"command": "rls",
			"filetypes": [ "rust" ],
			"rootPatterns": [ "Cargo.toml" ]
		},

		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": ["--lsp"],
			"rootPatterns": [
				"stack.yaml",
				".stack.yaml",
				"cabal.config",
				"package.yaml" ],
			"filetypes": [ "hs", "lhs", "haskell" ],
			"settings": {
				"formattingProvider": "stylish-haskell",
				//"formatOnImportOn": true,
				"hlintOn": true,
				//"liquidOn": true,
				"maxCompletions": 10,
				"completionSnippetsOn": true,
				"haddockComments.globalOn": true,
				"ghcide-code-actions-type-signatures.globalOn": true,
				"ghcide-type-lenses.globalOn": true,
				"ghcide-type-lenses.config.mode": "always"
			}
		},

		"go": {
			"command": "go-langserver",
			"filetypes": [ "go" ],
			"rootPatterns": [ "go.mod", "go.sum", "Gopkg.toml", "Gopkg.lock" ],
			"settings": {
				"funcSnippetEnabled": true,
				"gocodeCompletionEnabled": true,
				"formatTool": "gofmt",
				"lintTool": "golint"
			}
		},

		"bash": {
			"command": "bash-language-server",
			"args": [ "start" ],
			"filetypes": [ "sh", "bash" ],
			"ignoredRootPaths": [ "~" ]
		},

		"purescript": {
			"command": "purescript-language-server",
			"filetypes": [ "purescript" ],
			"trace.server": "off",
			"rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
			"args": ["--stdio"],
			"settings": {
				"purescript": {
					"addSpagoSources": true
				}
			}
		},

		"latex": {
			"command": "texlab",
			"ignoredRootPaths": ["~"],
			"filetypes": [ "tex", "bib", "plaintex", "context" ]
		}

  }
}
